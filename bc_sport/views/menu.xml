<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ACTIONS -->
    <record id="action_bc_sport" model="ir.actions.act_window">
        <field name="name">BC Sport</field>
        <field name="res_model">bc_sport.player</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Match -->
    <record id="action_bc_sport_matches" model="ir.actions.act_window">
        <field name="name">Matches</field>
        <field name="res_model">bc_sport.match</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <!-- Create match -->
    <record id="action_bc_sport_create_match" model="ir.actions.client">
        <field name="name">Create Match</field>
        <field name="tag">bc_sport.create_match</field>
    </record>
    <!-- Players -->
    <record id="action_bc_sport_players" model="ir.actions.act_window">
        <field name="name">Players</field>
        <field name="res_model">bc_sport.player</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <!-- Leaderboard -->
    <record id="action_bc_sport_leaderboard" model="ir.actions.client">
        <field name="name">Leaderboard</field>
        <field name="tag">bc_sport.leaderboard</field>
    </record>
    <!-- Dashboard -->
    <record id="action_bc_sport_dashboard" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">bc_sport.dashboard</field>
    </record>

    <!-- MENUITEMS -->
    <menuitem id="bc_sport_menu" action="bc_sport.action_bc_sport_dashboard" name="BC Sport" sequence="1" web_icon="bc_sport,static/description/icon.png" />
    <menuitem id="bc_sport_menu_dashboard" action="bc_sport.action_bc_sport_dashboard" name="Dashboard" parent="bc_sport_menu" sequence="1" />
    <menuitem id="bc_sport_menu_leaderboard" action="bc_sport.action_bc_sport_leaderboard" name="Leaderboard" parent="bc_sport_menu" sequence="2" />
    <menuitem id="bc_sport_menu_players" action="bc_sport.action_bc_sport_players" name="Players" parent="bc_sport_menu" sequence="3" />
    <menuitem id="bc_sport_menu_matches" action="bc_sport.action_bc_sport_matches" name="Matches" parent="bc_sport_menu" sequence="4" />
</odoo>